@using (Html.BeginForm("InvoiceView", "Customer", FormMethod.Post))
{

    <div>PaymentMode : </div>
    @Html.RadioButton("PaymentMode", "Cash")

    <span>Cash</span>
    @Html.RadioButton("PaymentMode", "Card")

    <span>Card</span>
    @Html.RadioButton("PaymentMode", "Wallet")

    <span>Wallet</span>
    @Html.RadioButton("PaymentMode", "NetBanking")

    <span>Net Banking</span>
    <div class="form-group mb-3">
        <label for="PackageName">PackageName</label>
        <input type="text" class="form-control" id="PackageName" name="PackageName" placeholder="Enter PackageName" required>
    </div>
    <div class="form-group mb-3">
        <label for="DropAddressPinCode">DropAddressPinCode</label>
        <input type="text" class="form-control" id="DropAddressPinCode" name="DropAddressPinCode" placeholder="Enter DropAddressPinCode" required>
    </div>
    <button type="submit" class="btn btn-primary">Place Order</button>
}
