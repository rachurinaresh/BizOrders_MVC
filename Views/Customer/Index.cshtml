@{
    ViewData["Title"] = "Welcome To Customer Page";
}
<h1 class="mb-4 text-center">@ViewData["Title"]</h1>

<h3 class="mb-3">Enter Your Details</h3>
@using (Html.BeginForm("CreateItems", "Customer", FormMethod.Post))
{
    <div class="d-flex justify-content-center align-items-center">
        <div class="w-50">
            <div class="w-75">
                <div class="form-group mb-4">
                <label for="CustomerName">Name</label>
                <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="Enter Name" required>
            </div>
            <div class="form-group mb-4">
                <label for="PrimeStartDate">PrimeStartDate</label>
                <input type="date" class="form-control" id="PrimeStartDate" name="PrimeStartDate" placeholder="PrimeStartDate" required>
            </div>
            <div class="form-group mb-4">
                <label for="PrimeEndDate">PrimeEndDate</label>
                <input type="date" class="form-control" id="PrimeEndDate" name="PrimeEndDate" placeholder="PrimeEndDate" required>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <div class="w-50 d-flex justify-content-center">
            <img src="assets/Customer.png" alt="Customer" />
        </div>
    </div>

}